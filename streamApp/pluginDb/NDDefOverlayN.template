record( seq, "$(P)$(R)ResetPlugin" )
{
	field( SELM, "All" )
	field( SELN, "0" )
	field( DLY1, "0" )

	# Defaults
	field( DOL1, 1 )
	field( DOL2, 1 )
	field( DOL3, "$(P)$(R)DefUse")
	field( DOL4, "$(P)$(R)DefPositionX")
	field( DOL5, "$(P)$(R)DefPositionY")
	field( DOL6, "$(P)$(R)DefSizeX")
	field( DOL7, "$(P)$(R)DefSizeY")
	field( DOL8, "$(P)$(R)DefShape")
	field( DOL9, "$(P)$(R)DefDrawMode")

	# Plugin values
	field( LNK1, "$(P)$(R)ResetPluginBase.PROC" )
	field( LNK2, "$(P)$(R)ResetName.PROC")
	field( LNK3, "$(P)$(R)Use PP")
	field( LNK4, "$(P)$(R)PositionX PP")
	field( LNK5, "$(P)$(R)PositionY PP")
	field( LNK6, "$(P)$(R)SizeX PP")
	field( LNK7, "$(P)$(R)SizeY PP")
	field( LNK8, "$(P)$(R)Shape PP")
	field( LNK9, "$(P)$(R)DrawMode PP")

	field( FLNK, "$(P)$(R)ResetPlugin2" )
	info( autosaveFields, "DLY1 DLY2 DLY3 DLY4 DLY5 DLY6 DLY7 DLY8 DLY9 DLYA" )
}

record( seq, "$(P)$(R)ResetPlugin2" )
{
	field( SELM, "All" )
