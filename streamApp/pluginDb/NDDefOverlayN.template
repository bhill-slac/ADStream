	# Plugin values
	field( LNK1, "$(P)$(R)Red PP")
	field( LNK2, "$(P)$(R)Green PP")
	field( LNK3, "$(P)$(R)Blue PP")

	info( autosaveFields, "DLY1 DLY2 DLY3 DLY4 DLY5 DLY6 DLY7 DLY8 DLY9 DLYA" )
}
