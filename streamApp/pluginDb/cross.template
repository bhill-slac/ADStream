# Support old names that don't follow the AD naming convention
alias( "$(P)$(R)Cross$(N):MinX",		"$(P)$(R)Cross$(N)X"		)
alias( "$(P)$(R)Cross$(N):MinX_RBV",	"$(P)$(R)Cross$(N)X_RBV"	)
