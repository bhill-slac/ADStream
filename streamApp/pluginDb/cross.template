record( longin, "$(P)$(R)Cross$(N):MinY_RBV" )
{
	field( INP,  "$(P)$(R)Cross$(N):MinY" )
}

record( longout, "$(P)$(R)Cross$(N):Color" )
{
	field( OUT,  "$(P)$(R)Cross$(N):Green" )
	field( FLNK, "$(P)$(R)Cross$(N):Color_RBV" )
}

record( longin, "$(P)$(R)Cross$(N):Color_RBV" )
{
