	field( LNK6, "$(P)$(R)FileNumber_write PP")
	field( LNK7, "$(P)$(R)FileNumber_Sync PP")
	field( LNK8, "$(P)$(R)AutoIncrement PP")
	field( LNK9, "$(P)$(R)AutoSave PP")

	field( FLNK, "$(P)$(R)ResetPlugin2" )
	info( autosaveFields, "DLY1 DLY2 DLY3 DLY4 DLY5 DLY6 DLY7 DLY8 DLY9 DLYA" )
}

