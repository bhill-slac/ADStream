record( seq, "$(P)$(R)ResetPlugin" )
{
field( TPRO, 2 )
	field( SELM, "All" )
	field( SELN, "0" )
	field( DLY1, "0" )

	# Defaults
	field( DOL1, 1 )
	field( DOL2, 1 )
	field( DOL3, 1 )
	field( DOL4, 1 )
	field( DOL5, "$(P)$(R)DefFileNumber")
	field( DOL6, "$(P)$(R)DefFileNumber_write")
	field( DOL7, "$(P)$(R)DefFileNumber_Sync")
	field( DOL8, "$(P)$(R)DefAutoIncrement")
	field( DOL9, "$(P)$(R)DefAutoSave")

	# Plugin values
	field( LNK1, "$(P)$(R)ResetPluginBase.PROC" )
#	field( LNK2, "$(P)$(R)ResetFilePath.PROC" )
#	field( LNK3, "$(P)$(R)ResetFileName.PROC" )
#	field( LNK4, "$(P)$(R)ResetFileTemplate.PROC" )
